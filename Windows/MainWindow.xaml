<Window x:Class="StickyNoteApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StickyNoteApp"
        mc:Ignorable="d" ResizeMode="NoResize" AllowsTransparency="True"
        Title="MainWindow" Height="525" Width="335" Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        WindowStyle="None">
    <Border CornerRadius="15" BorderBrush="Black" BorderThickness="0.5">
        <Border.Background>
            <LinearGradientBrush EndPoint="1,0" StartPoint="0,1">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF5B5B70" Offset="0"/>
                <GradientStop Color="#FF0A0A0C" Offset="0.909"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition  Height="10"/>
                <RowDefinition  Height="40"/>
                <RowDefinition  Height="30"/>
                <RowDefinition  Height="*"/>
                <RowDefinition  Height="50"/>
                <RowDefinition  Height="30"/>
            </Grid.RowDefinitions>

            <!--Top Window Toolbar-->
            <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="🗕" FontSize="15" ToolTip="Minimize" Click="Minimize_Click" Width="30" Height="30" Background="{x:Null}" Foreground="#FF898DA6" BorderBrush="{x:Null}">
                    <Button.Style>
                        <Style TargetType="Button"/>
                    </Button.Style>
                </Button>
                <Button Content="🗙" FontSize="15" ToolTip="Close Program" Click="Close_Click" Width="30" Height="30" Background="{x:Null}" Foreground="#FF898DA6" Margin="10,0,5,0" BorderBrush="{x:Null}">
                    <Button.Style>
                        <Style TargetType="Button"/>
                    </Button.Style>
                </Button>
            </StackPanel>
            <!--Note Display Panel-->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="3" Grid.Column="1">
                <ItemsControl Margin="7,5,0,0" Grid.Row="3" Grid.Column="1" ItemsSource="{Binding Notes}">
                    <ItemsControl.Style>
                        <Style TargetType="ItemsControl">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Notes.Count}" Value="0">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ItemsControl">
                                                <Grid>
                                                    <TextBlock Text="Tap the Create Note button to start!"
                                                   Foreground="#FF898DA6"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   TextAlignment="Center"
                                                   Margin="0,-40,0,0"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ItemsControl.Style>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Margin="10,5,0,10" FontSize="16" Height="50" Width="250"
                                        HorizontalAlignment="Left" Foreground="#FF898DA6"
                                        Click="OpenNote_Click" ToolTip="Open Note"
                                        Tag="{Binding}" BorderBrush="Black" BorderThickness="0.75" Background="#BF2A292B">
                                    <Grid>
                                        <Rectangle Height="3" Width="250" VerticalAlignment="Top" Margin="-1,-12,0,0" Fill="{Binding BackgroundColor}"/>
                                        <TextBlock Text="{Binding Title}" Margin="0,5,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                    </Grid>
                                </Button>
                                <Button Content="🗑" ToolTip="Delete" HorizontalAlignment="Center" Width="30" Margin="5,0,0,10"
                                        Height="30" VerticalAlignment="Center" Background="Transparent" Foreground="#FF898DA6"
                                        Click="Delete_Click" Tag="{Binding}" BorderBrush="Transparent">
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            <Label Content="Sticky Notes" Grid.Row="1" Grid.Column="1" Foreground="#FF898DA6" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,-5,0,0" />
            <Button Content="Create New Note" ToolTip="Create Note" FontSize="14" Background="#992A292B" BorderBrush="Black" BorderThickness="0.75" Foreground="#FF898DA6" Grid.Column="1" Grid.Row="4" Width="150" Click="Click_CreateNote" Margin="0,20,0,0"/>
        </Grid>
    </Border>
</Window>
